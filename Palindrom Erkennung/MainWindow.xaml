<Window x:Class="Palindrom_Erkennung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Palindrom_Erkennung"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TextBox1" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Margin="216,156,0,0"/>
        <Label x:Name="IsPalindrom" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="268,273,0,0"/>
        <Button x:Name="CheckIfPalindrom" Content="Check" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="32" Margin="247,221,0,0" RenderTransformOrigin="0.5,0.5" Click="CheckIfPalindrom_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-1.428"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.598"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>
</Window>
